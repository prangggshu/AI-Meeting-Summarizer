# AI Meeting Notes Summarizer - Environment Configuration
# Copy this file to .env and fill in your actual values
# 
# IMPORTANT: Never commit your actual .env file to version control!
# This file contains sensitive API keys and configuration.

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Port for the Express server (default: 3000)
PORT=3000

# Environment mode: development, staging, production
NODE_ENV=development

# Base URL for the application (used for CORS and redirects)
BASE_URL=http://localhost:3000

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================

# Primary AI Service: Groq API
# Get your API key from: https://console.groq.com/keys
# Required for AI-powered summarization
GROQ_API_KEY=your_groq_api_key_here

# Fallback AI Service: OpenAI API
# Get your API key from: https://platform.openai.com/api-keys
# Optional - used as fallback if Groq fails
OPENAI_API_KEY=your_openai_api_key_here

# AI Service Configuration
AI_SERVICE_TIMEOUT=30000
AI_MAX_RETRIES=3
AI_RETRY_DELAY=2000

# Groq-specific settings
GROQ_MODEL=llama3-8b-8192
GROQ_MAX_TOKENS=4000
GROQ_TEMPERATURE=0.3

# OpenAI-specific settings (if using as fallback)
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.3

# =============================================================================
# EMAIL SERVICE CONFIGURATION
# =============================================================================

# SMTP Configuration for sending summary emails
# Gmail SMTP settings (recommended for development)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# Email settings
EMAIL_FROM=your_email@gmail.com
EMAIL_FROM_NAME=Meeting Summarizer

# Email service timeouts and limits
EMAIL_TIMEOUT=10000
EMAIL_MAX_RECIPIENTS=10
EMAIL_RATE_LIMIT=5

# Alternative SMTP providers (uncomment to use):
# 
# SendGrid:
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=your_sendgrid_api_key
#
# Outlook/Hotmail:
# SMTP_HOST=smtp-mail.outlook.com
# SMTP_PORT=587
# SMTP_USER=your_email@outlook.com
# SMTP_PASS=your_password

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

# Maximum file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# Allowed file extensions (comma-separated)
ALLOWED_FILE_TYPES=.txt,.md,.rtf

# File storage configuration
UPLOAD_DIR=uploads
TEMP_DIR=temp

# File processing limits
MAX_CONTENT_LENGTH=1000000
MIN_CONTENT_LENGTH=10

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate limiting (requests per minute per IP)
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Session and security
SESSION_SECRET=your_session_secret_here_change_in_production
BCRYPT_ROUNDS=12

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Log level: error, warn, info, debug
LOG_LEVEL=info

# Log file configuration
LOG_FILE=logs/app.log
ERROR_LOG_FILE=logs/error.log

# Enable/disable specific logging
LOG_API_REQUESTS=true
LOG_AI_REQUESTS=true
LOG_EMAIL_EVENTS=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development-only settings (ignored in production)
DEV_MOCK_AI_SERVICE=false
DEV_MOCK_EMAIL_SERVICE=false
DEV_ENABLE_DEBUG_ROUTES=true

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Production-specific settings
ENABLE_COMPRESSION=true
ENABLE_HELMET=true
TRUST_PROXY=false

# Health check configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================

# 1. GROQ API KEY SETUP:
#    - Visit https://console.groq.com/keys
#    - Create a new API key
#    - Copy the key and replace 'your_groq_api_key_here' above
#    - Test with: curl -H "Authorization: Bearer YOUR_KEY" https://api.groq.com/openai/v1/models

# 2. OPENAI API KEY SETUP (Optional):
#    - Visit https://platform.openai.com/api-keys
#    - Create a new API key
#    - Copy the key and replace 'your_openai_api_key_here' above

# 3. GMAIL SMTP SETUP:
#    - Enable 2-factor authentication on your Gmail account
#    - Generate an App Password: https://myaccount.google.com/apppasswords
#    - Use your Gmail address for SMTP_USER
#    - Use the App Password (not your regular password) for SMTP_PASS

# 4. ALTERNATIVE EMAIL SERVICES:
#    - SendGrid: Get API key from https://app.sendgrid.com/settings/api_keys
#    - Mailgun: Get credentials from https://app.mailgun.com/app/domains
#    - AWS SES: Configure through AWS Console

# 5. SECURITY NOTES:
#    - Change SESSION_SECRET to a random string in production
#    - Use strong, unique API keys
#    - Never commit your .env file to version control
#    - Regularly rotate API keys and passwords
#    - Use environment-specific configurations for different deployments